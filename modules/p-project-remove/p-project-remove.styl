@import '../../styles/common/common'

.p-project-remove {
    fixed: left top -100%;
    height: 100%;
    width: 100%;
    opacity: 0;
    background: rgba($color_black,.7);

    transition: top .5s, opacity .5s;
}

.p-project-remove_visible_yes {
    opacity: 1;
    top: 0;
}

.p-project-remove__layout {
    height: 100%;
    width: 100%;
}

.p-project-remove__row_y_0 {
    height: 3em;
}

.p-project-remove__row_y_1 .p-project-remove__col {
    font-size: 2em;
    margin: 0 0 .25em 0;
    color: $color_white;
    padding: 0 .5em;
}

.p-project-remove__row_y_2 {
    height: 3.5em;
}

.p-project-remove__col {
    padding: 0 1em;
}

.p-project__title {
    border-bottom: .1em $color_white dotted;
}

.p-project-remove__header {
    color: $color_white;
    font-size: 2.5em;
    margin: .5em 0;
}

.p-project-remove__submit,
.p-project-remove__cancel {
    float: right;
    width: 3em;
    margin-left: .5em;
}