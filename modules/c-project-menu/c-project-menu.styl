@import '../../styles/common/common'

.c-project-menu {
    height: 3em;
    width: 100%;
    display: flex;
    justify-content: space-around;
    absolute: left bottom;
}

.c-project-menu_activated_no {
    .c-project-menu__item_id_refresh,
    .c-project-menu__item_id_configure,
    .c-project-menu__item_id_remove {
        top: 5em;
        cursor: default;

        &:hover {
            top: 5em;
            cursor: default;
        }
    }
}